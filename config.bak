exec xrandr --output DisplayPort-0 --mode 1024x768 --pos 0x0 --rotate normal --output HDMI-0 --off --output HDMI-1 --off --output eDP-0 --mode 1366x768 --pos 1024x0 --rotate normal
exec nm-applet
exec blueman-applet
